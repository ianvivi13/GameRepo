<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>LoginPageServlet</servlet-name>
    <servlet-class>Servlets.LoginPageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>HomePageServlet</servlet-name>
    <servlet-class>Servlets.HomePageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NewAccountPageServlet</servlet-name>
    <servlet-class>Servlets.NewAccountPageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>StatisticsPageServelet</servlet-name>
    <servlet-class>Servlets.StatisticsPageServelet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MultiplayerServlet</servlet-name>
    <servlet-class>Servlets.MultiplayerServlet</servlet-class>
  </servlet>

  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>LoginPageServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HomePageServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NewAccountPageServlet</servlet-name>
    <url-pattern>/new</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StatisticsPageServelet</servlet-name>
    <url-pattern>/stats</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MultiplayerServlet</servlet-name>
    <url-pattern>/multiplayer</url-pattern>
  </servlet-mapping>
  </web-app>